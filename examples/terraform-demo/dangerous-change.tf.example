terraform {
  required_version = ">= 1.0"
  required_providers {
    aws = {
      source  = "hashicorp/aws"
      version = "~> 5.0"
    }
  }
}

provider "aws" {
  region = "us-east-1"
}

# ‚ö†Ô∏è DANGEROUS: User with privilege escalation
resource "aws_iam_user" "developer" {
  name = "alice-developer"
  path = "/developers/"

  tags = {
    Environment = "development"
    ManagedBy   = "terraform"
    Team        = "engineering"
  }
}

# üö® CRITICAL VULNERABILITY: PassRole + Lambda
resource "aws_iam_user_policy" "dev_dangerous" {
  name = "developer-dangerous"
  user = aws_iam_user.developer.name

  policy = jsonencode({
    Version = "2012-10-17"
    Statement = [
      {
        Effect = "Allow"
        Action = [
          "iam:PassRole",           # üö® Can pass any role!
          "lambda:CreateFunction",  # üö® Can create Lambda!
          "lambda:InvokeFunction"   # üö® Can execute code!
        ]
        Resource = "*"
      }
    ]
  })
}

# Admin role that can be abused
resource "aws_iam_role" "admin_role" {
  name = "AdminRole"

  assume_role_policy = jsonencode({
    Version = "2012-10-17"
    Statement = [
      {
        Effect = "Allow"
        Principal = {
          Service = "lambda.amazonaws.com"  # üö® Lambda can assume this!
        }
        Action = "sts:AssumeRole"
      }
    ]
  })
}

# üö® Full admin access
resource "aws_iam_role_policy_attachment" "admin_access" {
  role       = aws_iam_role.admin_role.name
  policy_arn = "arn:aws:iam::aws:policy/AdministratorAccess"
}

